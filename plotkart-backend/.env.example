# Server Configuration
NODE_ENV=development
PORT=5000
API_BASE_URL=http://localhost:5000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=plotkart_db
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/plotkart_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production_min_32_chars
JWT_REFRESH_SECRET=your_refresh_token_secret_change_this_min_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback
FRONTEND_URL=http://localhost:3000

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# IPFS Configuration
IPFS_MODE=local
# For local IPFS node
IPFS_HOST=localhost
IPFS_PORT=5001
IPFS_PROTOCOL=http

# For Pinata (public IPFS)
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET=your_pinata_secret_api_key

# Payment Configuration (Mock/Stripe)
PAYMENT_MODE=mock
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Legal/Compliance (for production)
AADHAAR_MASKED_ONLY=true
AADHAAR_STORAGE_MODE=hashed
