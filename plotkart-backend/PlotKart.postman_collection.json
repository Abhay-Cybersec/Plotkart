{
  "info": {
    "name": "PlotKart API",
    "description": "Complete API collection for PlotKart Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"+91 9876543215\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "pm.collectionVariables.set('token', response.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@plotkart.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Set Role",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"buyer\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/role",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "role"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "eKYC",
      "item": [
        {
          "name": "Upload KYC Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "document",
                  "type": "file",
                  "src": "/path/to/document.pdf"
                },
                {
                  "key": "documentType",
                  "value": "aadhaar",
                  "type": "text"
                },
                {
                  "key": "documentNumber",
                  "value": "1234-5678-9012",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/ekyc/upload",
              "host": ["{{baseUrl}}"],
              "path": ["ekyc", "upload"]
            }
          }
        },
        {
          "name": "Get Pending KYC (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/ekyc/pending/list",
              "host": ["{{baseUrl}}"],
              "path": ["ekyc", "pending", "list"]
            }
          }
        },
        {
          "name": "Verify KYC (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"approved\": true,\n  \"notes\": \"KYC documents verified successfully\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/ekyc/:id/verify",
              "host": ["{{baseUrl}}"],
              "path": ["ekyc", ":id", "verify"]
            }
          }
        }
      ]
    },
    {
      "name": "Properties",
      "item": [
        {
          "name": "Upload Property",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "title",
                  "value": "Premium Plot",
                  "type": "text"
                },
                {
                  "key": "description",
                  "value": "Premium residential plot",
                  "type": "text"
                },
                {
                  "key": "area",
                  "value": "1500 sq ft",
                  "type": "text"
                },
                {
                  "key": "locationText",
                  "value": "Chennai",
                  "type": "text"
                },
                {
                  "key": "latitude",
                  "value": "13.0827",
                  "type": "text"
                },
                {
                  "key": "longitude",
                  "value": "80.2707",
                  "type": "text"
                },
                {
                  "key": "price",
                  "value": "5000000",
                  "type": "text"
                },
                {
                  "key": "cmdaApproved",
                  "value": "true",
                  "type": "text"
                },
                {
                  "key": "documents",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/properties/upload",
              "host": ["{{baseUrl}}"],
              "path": ["properties", "upload"]
            }
          }
        },
        {
          "name": "Get All Properties",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/properties?page=1&limit=10&cmda=true",
              "host": ["{{baseUrl}}"],
              "path": ["properties"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "cmda",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Get Property by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/properties/:id",
              "host": ["{{baseUrl}}"],
              "path": ["properties", ":id"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Verify Property",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"propertyId\": \"property-uuid-here\",\n  \"approved\": true,\n  \"verificationNotes\": \"All documents verified\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/verify-property",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "verify-property"]
            }
          }
        },
        {
          "name": "Get Analytics",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/analytics",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "analytics"]
            }
          }
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Checkout Property",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/transactions/properties/:id/checkout",
              "host": ["{{baseUrl}}"],
              "path": ["transactions", "properties", ":id", "checkout"]
            }
          }
